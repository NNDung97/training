<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="200px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="50px"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="bottom"
        android:paddingLeft="20px"
        android:paddingBottom="50px"
        android:background="@drawable/hoang_hon_bot"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="VIETNAM ASSOCIATION OF CORPORATE DIRECTORS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="#fff"
            android:id="@+id/textView1" />
        <TextView
            android:text="5.0 Social Intranet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>
        </LinearLayout> 
        <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="#fff"
        android:layout_marginBottom="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_marginBottom="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_group_black_18dp"/>
            <TextView
                android:text="Hội viên mới"
                android:paddingLeft="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                </LinearLayout>
        <ListView
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:id="@+id/lvhoivienmoi" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_date_range_black_18dp"/>
                <TextView
                    android:text="Sự kiện mới"
                    android:paddingLeft="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/skxemtat"
                    android:textColor="#f00"
                    android:gravity="right"
                    android:text="Xem tất cả >>"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
        
        <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:background="#fff"
                android:layout_marginBottom="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/event1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="CSMO Workshop: WHAT MAKES THE BEST BRAND EXPERIENCE ..."/>
                <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/baseline_date_range_black_18dp"/>
                    <TextView
                        android:text="19/05/2019 - 10:30AM"
                        android:paddingLeft="20px"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
                <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/baseline_room_black_18dp"/>
                    <TextView
                        android:text="Mahagany Coworking Space, Ha Noi"
                        android:paddingLeft="20px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline_loyalty_black_18dp"/>
                <TextView
                    android:text="Ưu đãi"
                    android:paddingLeft="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/skxemtat"
                    android:textColor="#f00"
                    android:gravity="right"
                    android:text="Xem tất cả >>"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:background="#fff"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/capture3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Giảm 30% khóa học đào tạo nhân sự chuyên nghiệp"/>
                <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/outline_local_offer_black_18dp"/>
                    <TextView
                        android:text="Free"
                        android:paddingLeft="20px"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:text="Tiết kiệm:"
                        android:paddingLeft="20px"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                        <TextView
                        android:text="1.500.000đ"
                        android:textColor="#f00"
                        android:paddingLeft="10px"
                        android:paddingRight="20px"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_marginBottom="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/baseline_room_black_18dp"/>
                    <TextView
                        android:text="Công ty đào tạo nhâ lực Learn"
                        android:paddingLeft="20px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_bar_item" />

</RelativeLayout>
