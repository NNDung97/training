            android:textColor="#F00"
            android:paddingLeft ="10dp"
        android:text="1.200.00Đ"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12dp"
        android:gravity="right"
        android:id="@+id/tvChucVu3" 
        />
    </LinearLayout>
<LinearLayout
