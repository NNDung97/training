
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1" >
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_keyboard_backspace_black_18dp"
            android:id="@+id/btnTTExit" />
        <TextView
            android:text="Trạng thái"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView1" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:id="@+id/linearLayout2" >
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/android"
            android:id="@+id/imgttavatar" />
        <TextView
            android:text="Cập nhật trang thái của bạn !"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:textStyle="bold"
            android:paddingRight="150px"
            android:paddingTop="20px"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            android:gravity="left"
            android:background="#fff"
            android:id="@+id/tvtrangthai" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvthemanh"
            android:gravity="left"
            android:background="@drawable/outline_insert_photo_black_18dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewTrangThai"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>